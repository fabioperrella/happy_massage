<ul class="ls-tabs-nav">
  <% @available_timetables.each do |massage_date| %>
    <li><a data-ls-module="tabs" href="#day-<%= massage_date[:date].gsub("/", "") %>">Dia | <%= massage_date[:date] %></a></li>
  <% end %>
</ul>

<div class="ls-tabs-container">
  <% @available_timetables.each do |massage_date| %>
    <div id="day-<%= massage_date[:date].gsub("/", "") %>" class="ls-tab-content">

      <% massage_date[:periods].each do |massage_period| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <div class="hm-schedule--period ls-txt-center">
            <% if massage_period[:period] == "morning" %>
              <h1>Manhã</h1>
            <% else %>
              <h1>Tarde</h1>
            <% end %>
          </div>
        <div class="ls-list">
          <header class="ls-list-header hm-list">
            <% massage_period[:schedule].each do |massage_slot| %>
              <div class="col-lg-3 col-md-4 col-sm-4 col-xs-4 ls-txt-center">
                <h2><%= "#{l(massage_slot[:time], format: :short)}" %></h2>
              </div>
              <div class="col-lg-6 col-md-4 col-sm-4 col-xs-2 ls-txt-center">
                <h3><%= massage_slot[:remaining_massages] %></h3>
              </div>
              <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 ls-txt-center hm-schedule--btn">
                <a href="#" class="ls-btn-primary ls-btn-right">Agendar</a>
              </div>
            <% end %>
          </header>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>


